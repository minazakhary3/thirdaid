<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minazakaria.thirdaid.SafeDriveModeActivity">



    <ImageView
        android:id="@+id/header"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/safedrive_header" />

    <Switch
        android:id="@+id/safeDriveSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/safeDriveStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:scaleX="2"
        android:scaleY="2"
        android:switchMinWidth="35dp"
        android:text="" />

    <TextView
        android:id="@+id/safeDriveStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="169dp"
        android:text="Safe Drive Mode: OFF"
        android:textColor="#000000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/speedEst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/safeDriveStatus"
        android:layout_below="@+id/header"
        android:layout_marginTop="29dp"
        android:text="Estimated Speed:" />

    <TextView
        android:id="@+id/speedChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/speedEst"
        android:layout_below="@+id/speedEst"
        android:layout_marginTop="18dp"
        android:text="Speed Change:" />

    <TextView
        android:id="@+id/lastSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/speedChange"
        android:layout_below="@+id/speedChange"
        android:layout_marginTop="21dp"
        android:text="Last Speed:" />

    <Button
        android:id="@+id/simulate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:text="Simulate" />
</RelativeLayout>
