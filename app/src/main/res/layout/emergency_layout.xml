<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="345dp"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal">


    <android.support.v7.widget.CardView
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="10dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:background="#c53c2c"
            android:padding="8dp">


            <TextView
                android:id="@+id/emergencyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accident"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/emergencyDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="No extra information was provided."
                android:textColor="#ffffff"
                android:layout_marginTop="50dp"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/emergencyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/emergencyDetails"
                android:text="Reported at: 10:57AM"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/emergencyDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/emergencyDate"
                android:layout_alignTop="@+id/emergencyDate"
                android:layout_marginLeft="160dp"
                android:text="55 Meters Away"
                android:paddingBottom="10dp"
                android:textColor="#ffffff"/>

            <ImageView
                android:id="@+id/getDirectionsButton"
                android:layout_width="130dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emergencyDate"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:src="@drawable/get_directions_styles" />

            <ImageView
                android:id="@+id/viewMoreButton"
                android:layout_width="121dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emergencyDate"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:src="@drawable/more_details_button_styles"
                android:layout_marginLeft="140dp"
                android:paddingBottom="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>